<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="473.0" prefWidth="220.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.javalab10.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Введіть параметри інтегрування:" />
    <TextField fx:id="aField" promptText="a" />
    <TextField fx:id="bField" promptText="b" />
    <TextField fx:id="nField" promptText="Кількість розбиттів" />
    <TextField fx:id="threadsField" promptText="Кількість потоків"/>
    <Button onAction="#onCalculateButtonClick" text="Обчислити" />
    <Label fx:id="resultLabel" text="Результат з’явиться тут" />
</VBox>
